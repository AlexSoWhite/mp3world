<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.nafanya.mp3world">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="29"/>
    <uses-permission android:name="android.permission.WAKE_LOCK"/>
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE"/>
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:theme="@style/Theme.Mp3world"
        android:requestLegacyExternalStorage="true"
        android:name=".core.di.PlayerApplication"
        tools:ignore="LockedOrientationActivity">
        <activity
            android:name=".core.entrypoint.InitialActivity"
            android:exported="true"
            android:screenOrientation="portrait"
            android:theme="@style/SplashTheme"
            android:launchMode="singleTask">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".core.entrypoint.MainActivity"
            android:exported="true"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Mp3world.Launcher"
            android:launchMode="singleTask">
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>
            <meta-data android:name="android.app.searchable"
                android:resource="@xml/searchable"/>
        </activity>
        <activity android:name=".features.allSongs.view.AllSongsActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustNothing"
            android:screenOrientation="portrait"/>
        <activity android:name=".features.allPlaylists.view.allPlaylists.AllPlaylistsActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustNothing"
            android:screenOrientation="portrait"/>
        <activity android:name=".features.playlist.immutablePlaylist.ImmutablePlaylistActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustNothing"
            android:screenOrientation="portrait"/>
        <activity android:name=".features.allPlaylists.view.modifyPlaylist.ModifyPlaylistActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustNothing"
            android:screenOrientation="portrait"/>
        <activity android:name=".features.allPlaylists.view.mutablePlaylist.MutablePlaylistActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustNothing"
            android:screenOrientation="portrait" />
        <activity android:name=".features.playlist.view.CurrentPlaylistDialogActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustNothing"
            android:theme="@style/Theme.CurrentPlaylistDialog"/>
        <activity android:name=".features.artists.view.ArtistListActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustNothing"
            android:screenOrientation="portrait"/>
        <activity android:name=".features.albums.view.AlbumListActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustNothing"
            android:screenOrientation="portrait"/>
        <activity android:name=".features.favorites.view.FavouriteListActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustNothing"
            android:screenOrientation="portrait"/>
        <activity android:name=".features.remoteSongs.view.RemoteSongsActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustNothing"
            android:screenOrientation="portrait"/>
        <activity android:name=".features.playerView.view.FullScreenPlayerActivity"
            android:screenOrientation="portrait"/>
        <service android:name=".features.foregroundService.ForegroundService" />

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.provider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/provider_paths" />
        </provider>
    </application>
</manifest>