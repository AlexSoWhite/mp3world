<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".core.entrypoint.MainActivity"
    android:background="@drawable/background_gradient"
    android:paddingTop="50dp">

    <LinearLayout
        android:id="@+id/main_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.3">

        <include
            android:id="@+id/all_songs"
            layout="@layout/main_menu_item" />

        <include
            android:id="@+id/playlists"
            layout="@layout/main_menu_item" />

        <include
            android:id="@+id/artists"
            layout="@layout/main_menu_item" />

        <include
            android:id="@+id/albums"
            layout="@layout/main_menu_item" />

        <include
            android:id="@+id/favourite"
            layout="@layout/main_menu_item" />

<!--        <include-->
<!--            android:id="@+id/statistics"-->
<!--            layout="@layout/main_menu_item"-->
<!--            bind:description="@{&quot;Статистика&quot;}"-->
<!--            bind:count="@{&quot;&quot;}" />-->
    </LinearLayout>

    <include
        android:id="@+id/loader"
        layout="@layout/loader"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/player_control_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:name="com.nafanya.mp3world.features.playerView.view.BottomControlViewFragment"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>