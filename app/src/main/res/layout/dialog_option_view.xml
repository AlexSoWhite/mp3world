<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="?android:selectableItemBackground"
    android:paddingHorizontal="10dp"
    android:layout_width="match_parent"
    android:layout_height="40dp">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/option_menu_item_icon"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:background="@android:color/transparent"
        tools:src="@drawable/icv_favorite_filled"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/option_menu_item_description"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/option_menu_item_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:background="@android:color/transparent"
        android:textSize="18sp"
        android:gravity="center_vertical"
        android:layout_marginStart="15dp"
        android:ellipsize="marquee"
        tools:text="добавить в избранное"
        app:layout_constraintStart_toEndOf="@id/option_menu_item_icon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:singleLine="true" />

</androidx.constraintlayout.widget.ConstraintLayout>